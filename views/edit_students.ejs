<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class ="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">
                    Edit Student (<%=student.name %>)
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%=student._id%>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" value="<%=student.name %>" placeholder="Enter name" required/>
                        </div>
                        <div class="mb-3">
                            <label for="address">Address</label>
                            <input type="address" name="address" class="form-control form-control-lg" value="<%=student.address %>" placeholder="Enter address" required/>
                        </div>
                        <div class="mb-3">
                            <label for="contact">Contact</label>
                            <input type="tel" name="contact" class="form-control form-control-lg" value="<%=student.contact %>" placeholder="Enter contact" required/>
                        </div>
                     
                        <div>
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg"/>
                            <img src="/<%=student.image %>" width="100" class="image-thumbnail mt-1" alt="">
                        </div>
                        <input type="hidden" name="old_image" value="<%= student.image %>">
                        <br>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Student" class="btn btn-success btn-lg"/>

                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>
</div>